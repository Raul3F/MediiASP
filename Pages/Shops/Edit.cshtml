@page
@model BarberShop.Pages.Shops.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shop.ID" />
            <div class="form-group">
                <label asp-for="Shop.Name" class="control-label"></label>
                <input asp-for="Shop.Name" class="form-control" />
                <span asp-validation-for="Shop.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Location" class="control-label"></label>
                <input asp-for="Shop.Location" class="form-control" />
                <span asp-validation-for="Shop.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.Start" class="control-label"></label>
                <input asp-for="Shop.Start" class="form-control" />
                <span asp-validation-for="Shop.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shop.End" class="control-label"></label>
                <input asp-for="Shop.End" class="form-control" />
                <span asp-validation-for="Shop.End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
